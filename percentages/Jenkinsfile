pipeline {
    agent {
        docker {
            image 'maven:3.9.0-eclipse-temurin-11'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo "Building ${env.BUILD_ID}"
                dir('percentages') {
                    sh 'mvn clean compile -Dmaven.test.skip=true'
                }
            }
        }
        stage('Test') {
            steps {
                echo "Testing ${env.BUILD_ID}"
                dir('percentages') {
                    sh 'mvn test'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying ${env.BUILD_ID}"
                dir('percentages') {
                   sh 'mvn package -Dmaven.test.skip=true'
                }
            }
        }
    }

}